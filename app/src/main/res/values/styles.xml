<resources>
    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"-->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:paddingStart">@dimen/dimen_8</item>
        <item name="android:paddingLeft">@dimen/dimen_8</item>
        <item name="android:paddingEnd">@dimen/dimen_8</item>
        <item name="android:paddingRight">@dimen/dimen_8</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#58595b</item>
    </style>
    <style name="AppTextAppearance.Subtitle2.Bold" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/worksans_bold</item>
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#58595b</item>
    </style>

    <style name="AppTextAppearance.Subtitle2.ExtraBold" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/worksans_extrabold</item>
        <item name="android:fontFamily">@font/worksans_extrabold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#58595b</item>
    </style>

</resources>